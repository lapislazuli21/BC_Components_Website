---
interface Category {
  title: string;
  description: string;
  icon: string;
}

const categories: Category[] = [
  {
    title: 'Industrial Connectors',
    description: 'Heavy-duty connectors for demanding industrial environments',
    icon: 'plug'
  },
  {
    title: 'Terminal Blocks',
    description: 'High-quality terminal blocks for reliable connections',
    icon: 'terminal'
  },
  {
    title: 'Relays & Switches',
    description: 'Precision relays and switches for control applications',
    icon: 'switch'
  },
  {
    title: 'Passive Components',
    description: 'Resistors, capacitors, and inductors for every need',
    icon: 'chip'
  },
  {
    title: 'Automation Products',
    description: 'Smart solutions for industrial automation',
    icon: 'cog'
  },
  {
    title: 'Marking Systems',
    description: 'Professional labeling and marking solutions',
    icon: 'tag'
  },
];

const iconMap: Record<string, string> = {
  plug: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />',
  terminal: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />',
  switch: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />',
  chip: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />',
  cog: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />',
  tag: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />',
};
---

<section class="py-20 bg-gradient-to-b from-white to-light">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="section-title mb-4">Product Categories</h2>
      <p class="section-subtitle mx-auto">
        Comprehensive range of electronic components for every industrial application
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {categories.map((category, index) => (
        <a 
          href="/linecard"
          class="group glass-card p-8 card-hover animate-scale-in"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Icon -->
          <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={iconMap[category.icon]} />
          </div>

          <!-- Content -->
          <h3 class="text-xl font-semibold text-dark mb-3 group-hover:text-primary-500 transition-colors">
            {category.title}
          </h3>
          <p class="text-gray-600">
            {category.description}
          </p>

          <!-- Arrow -->
          <div class="mt-6 flex items-center text-primary-500 font-medium opacity-0 group-hover:opacity-100 transition-opacity">
            <span>Learn More</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
