---
interface Props {
    isAnniversary?: boolean;
}

const { isAnniversary = false } = Astro.props;

const navLinks = [
    { href: "/", label: "Home" },
    { href: "/about", label: "About" },
    { href: "/linecard", label: "Line Card" },
    { href: "/contact", label: "Contact" },
];

// Normalize current path by removing trailing slash (except for home)
const rawPath = Astro.url.pathname;
const currentPath = rawPath === "/" ? "/" : rawPath.replace(/\/$/, "");

// Helper function to check if link is active
function isActiveLink(linkHref: string): boolean {
    if (linkHref === "/") {
        return currentPath === "/";
    }
    return currentPath === linkHref || currentPath.startsWith(linkHref + "/");
}
---

<header
    class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100"
>
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3 group">
                <img
                    src="/images/profile/BC_Components_Logo.png"
                    alt="BC Components Logo"
                    class="h-12 w-auto transition-transform duration-300 group-hover:scale-105"
                />
                {
                    isAnniversary && (
                        <span class="hidden sm:inline-flex anniversary-badge text-xs">
                            <svg
                                class="w-3 h-3"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            22 Years
                        </span>
                    )
                }
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-8">
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class={`relative font-medium transition-colors duration-200 ${
                                isActiveLink(link.href)
                                    ? "text-primary-500"
                                    : "text-gray-700 hover:text-primary-500"
                            }`}
                        >
                            {link.label}
                            <span
                                class={`absolute -bottom-1 left-0 h-0.5 bg-primary-500 transition-all duration-300 ${
                                    isActiveLink(link.href) ? "w-full" : "w-0"
                                } group-hover:w-full`}
                            />
                        </a>
                    ))
                }
            </div>

            <!-- CTA Button (Desktop) -->
            <div class="hidden md:flex items-center gap-4">
                <a href="/contact" class="btn-primary text-sm">
                    Request Quote
                </a>

                <!-- Social Icons -->
                <div class="flex items-center gap-2">
                    <a
                        href="https://www.facebook.com/Bccompelectronics/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="p-2 text-gray-500 hover:text-primary-500 transition-colors"
                        aria-label="Facebook"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="mailto:bc@bccomp.net"
                        class="p-2 text-gray-500 hover:text-primary-500 transition-colors"
                        aria-label="Email"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-button"
                class="md:hidden p-2 text-gray-700 hover:text-primary-500 transition-colors"
                aria-label="Toggle menu"
                aria-expanded="false"
            >
                <svg
                    id="menu-icon-open"
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <svg
                    id="menu-icon-close"
                    class="w-6 h-6 hidden"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-6">
            <div class="flex flex-col gap-4 pt-4 border-t border-gray-100">
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class={`py-2 font-medium transition-colors ${
                                isActiveLink(link.href)
                                    ? "text-primary-500"
                                    : "text-gray-700 hover:text-primary-500"
                            }`}
                        >
                            {link.label}
                        </a>
                    ))
                }
                <a href="/contact" class="btn-primary text-center mt-2">
                    Request Quote
                </a>

                <!-- Social Links (Mobile) -->
                <div
                    class="flex items-center gap-4 pt-4 border-t border-gray-100"
                >
                    <a
                        href="https://www.facebook.com/Bccompelectronics/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="p-2 text-gray-500 hover:text-primary-500"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="mailto:bc@bccomp.net"
                        class="p-2 text-gray-500 hover:text-primary-500"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="tel:+912235691666"
                        class="p-2 text-gray-500 hover:text-primary-500"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<script>
    const menuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIconOpen = document.getElementById("menu-icon-open");
    const menuIconClose = document.getElementById("menu-icon-close");

    menuButton?.addEventListener("click", () => {
        const isOpen = mobileMenu?.classList.contains("hidden");

        mobileMenu?.classList.toggle("hidden");
        menuIconOpen?.classList.toggle("hidden");
        menuIconClose?.classList.toggle("hidden");

        menuButton?.setAttribute("aria-expanded", isOpen ? "true" : "false");
    });
</script>
