<script>
    function initNewsletterForm() {
        const form = document.getElementById("newsletter-form");
        const successMessage = document.getElementById("newsletter-success");
        const nlLoadedAt = document.getElementById(
            "nl_loaded_at",
        ) as HTMLInputElement;

        // Set form load timestamp
        if (nlLoadedAt) {
            nlLoadedAt.value = Date.now().toString();
        }

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(form as HTMLFormElement);

            // Bot detection
            const honeypot = formData.get("nl_website") as string;
            const loadedAt = parseInt(
                (formData.get("nl_loaded_at") as string) || "0",
            );
            const timeTaken = Date.now() - loadedAt;

            // Check honeypot and time
            if (honeypot || timeTaken < 2000) {
                // Show fake success to not alert the bot
                successMessage?.classList.remove("hidden");
                (form as HTMLFormElement).reset();
                setTimeout(() => {
                    successMessage?.classList.add("hidden");
                }, 5000);
                return;
            }

            const email = formData.get("email") as string;

            // Basic email validation
            if (!email || !email.includes("@") || email.length < 5) {
                return;
            }

            try {
                // Submit to Pipedream webhook
                await fetch("https://eoqpbh3rtni9q33.m.pipedream.net", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        type: "newsletter",
                        email,
                        timestamp: new Date().toISOString(),
                        _meta: {
                            timeTaken: Math.round(timeTaken / 1000),
                        },
                    }),
                });

                successMessage?.classList.remove("hidden");
                (form as HTMLFormElement).reset();
                // Reset timestamp
                if (nlLoadedAt) {
                    nlLoadedAt.value = Date.now().toString();
                }

                setTimeout(() => {
                    successMessage?.classList.add("hidden");
                }, 5000);
            } catch (error) {
                console.error("Newsletter signup failed:", error);
            }
        });
    }

    // Initialize on page load
    document.addEventListener("DOMContentLoaded", initNewsletterForm);
    document.addEventListener("astro:page-load", initNewsletterForm);
</script>
