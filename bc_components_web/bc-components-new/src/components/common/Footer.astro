                        <input
                            type="text"
                            name="nl_website"
                            class="hidden"
                            tabindex="-1"
                            autocomplete="off"
                            aria-hidden="true"
                        />
                        <input
                            type="hidden"
                            id="nl_loaded_at"
                            name="nl_loaded_at"
                            value=""
                        />

                        <input
                            type="email"
                            name="email"
                            placeholder="Enter your email"
                            required
                            class="flex-1 px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-sm text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500"
                        />
