<script>
    function initContactPageForm() {
        const form = document.getElementById("contact-form") as HTMLFormElement;
        const submitBtn = document.getElementById("submit-btn");
        const btnText = document.getElementById("btn-text");
        const btnSpinner = document.getElementById("btn-spinner");
        const successMessage = document.getElementById("success-message");
        const errorMessage = document.getElementById("error-message");
        const formLoadedAt = document.getElementById(
            "form_loaded_at",
        ) as HTMLInputElement;

        // Set form load timestamp for time-based validation
        if (formLoadedAt) {
            formLoadedAt.value = Date.now().toString();
        }

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();

            // Hide any previous messages
            successMessage?.classList.add("hidden");
            errorMessage?.classList.add("hidden");

            const formData = new FormData(form);

            // Bot detection checks
            const honeypot1 = formData.get("website") as string;
            const honeypot2 = formData.get("fax_number") as string;
            const loadedAt = parseInt(
                (formData.get("form_loaded_at") as string) || "0",
            );
            const now = Date.now();
            const timeTaken = now - loadedAt;

            // Check 1: Honeypot fields should be empty (bots fill them)
            if (honeypot1 || honeypot2) {
                console.log("Bot detected: honeypot filled");
                // Show fake success to not alert the bot
                successMessage?.classList.remove("hidden");
                form.reset();
                return;
            }

            // Check 2: Form should take at least 3 seconds to fill (bots are instant)
            if (timeTaken < 3000) {
                console.log("Bot detected: form submitted too quickly");
                // Show fake success to not alert the bot
                successMessage?.classList.remove("hidden");
                form.reset();
                return;
            }

            // Check 3: Basic validation
            const name = formData.get("name") as string;
            const message = formData.get("message") as string;
            if (
                !name ||
                name.trim().length < 2 ||
                !message ||
                message.trim().length < 10
            ) {
                errorMessage?.classList.remove("hidden");
                return;
            }

            // Show loading state
            btnText!.textContent = "Sending...";
            btnSpinner?.classList.remove("hidden");
            (submitBtn as HTMLButtonElement).disabled = true;

            const data = {
                type: "contact_page",
                name: name,
                company: formData.get("company"),
                email: formData.get("email"),
                phone: formData.get("phone"),
                inquiryType: formData.get("inquiryType"),
                subject: formData.get("subject"),
                message: message,
                newsletter: formData.get("newsletter") === "on",
                source: window.location.href,
                timestamp: new Date().toISOString(),
                _meta: {
                    timeTaken: Math.round(timeTaken / 1000),
                    userAgent: navigator.userAgent,
                },
            };

            try {
                await fetch("https://eoqpbh3rtni9q33.m.pipedream.net", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data),
                });

                // Show success
                successMessage?.classList.remove("hidden");
                form.reset();
                // Reset timestamp for new submissions
                if (formLoadedAt) {
                    formLoadedAt.value = Date.now().toString();
                }

                // Scroll to success message
                successMessage?.scrollIntoView({
                    behavior: "smooth",
                    block: "center",
                });
            } catch (error) {
                console.error("Form submission failed:", error);
                errorMessage?.classList.remove("hidden");
            } finally {
                // Reset button state
                btnText!.textContent = "Send Message";
                btnSpinner?.classList.add("hidden");
                (submitBtn as HTMLButtonElement).disabled = false;
            }
        });
    }

    // Initialize on page load
    document.addEventListener("DOMContentLoaded", initContactPageForm);
    document.addEventListener("astro:page-load", initContactPageForm);
</script>
