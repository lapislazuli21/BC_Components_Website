                            class="flex items-center gap-4 p-5 glass-card card-hover"
                        >
                            <div
                                class="w-12 h-12 bg-secondary-100 rounded-xl flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-6 h-6 text-secondary-500"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Email</p>
                                <p class="font-semibold text-dark">
                                    bc@bccomp.net
                                </p>
                            </div>
