    url: 'https://www.hummel.com/en/',
    category: 'Cable Glands',
    description: 'Cable glands and industrial connectivity solutions'
  },
  { 
    name: 'INCAP', 
    logo: '/images/svgs/BC Logos/INCAP_Logo.jpg', 
