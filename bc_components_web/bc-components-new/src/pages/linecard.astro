const categories = [...new Set(principals.map(p => p.category))];
---

<BaseLayout 
  title="Line Card | BC Components - Our Principals & Products"
  description="Explore BC Components' complete line card featuring authorized products from Phoenix Contact, Protectron, Elcom, CTR, and more. Industrial connectors, terminal blocks, and electronic components."
>
  <!-- Hero Section -->
  <section class="py-16 bg-mesh-pattern">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl font-display font-bold mb-6">
          Our <span class="text-gradient">Line Card</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Authorized distributor for leading electronic component manufacturers. 
          Explore our comprehensive product portfolio.
        </p>
        
        <!-- Quick Stats -->
        <div class="flex flex-wrap justify-center gap-8">
          <div class="text-center">
            <p class="text-3xl font-bold text-gradient">15+</p>
            <p class="text-gray-500 text-sm">Principal Partners</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-gradient">1000+</p>
            <p class="text-gray-500 text-sm">Products</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-gradient">6+</p>
            <p class="text-gray-500 text-sm">Categories</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="py-8 bg-white border-b border-gray-100 sticky top-20 z-40">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-3">
        <button 
          class="filter-btn active px-4 py-2 rounded-full text-sm font-medium transition-all"
          data-category="all"
        >
          All Partners
        </button>
        {categories.map(category => (
          <button 
            class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all"
            data-category={category}
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Principals Grid -->
  <section class="py-16 bg-gradient-to-b from-white to-light">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div id="principals-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {principals.map((principal, index) => (
          <a 
            href={principal.url}
            target="_blank"
            rel="noopener noreferrer"
            class="principal-card glass-card p-8 card-hover animate-scale-in group"
            data-category={principal.category}
            style={`animation-delay: ${index * 50}ms`}
          >
            <!-- Logo -->
            <div class="h-20 flex items-center justify-center mb-6 grayscale group-hover:grayscale-0 transition-all duration-300">
              <img 
                src={principal.logo} 
                alt={principal.name}
                class="max-h-full max-w-full object-contain"
                loading="lazy"
              />
            </div>
            
            <!-- Content -->
            <div class="text-center">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-500 transition-colors">
                {principal.name}
              </h3>
              <span class="inline-block px-3 py-1 bg-primary-100 text-primary-600 rounded-full text-xs font-medium mb-3">
                {principal.category}
              </span>
              {principal.description && (
                <p class="text-gray-500 text-sm">{principal.description}</p>
              )}
            </div>

            <!-- Hover Arrow -->
            <div class="mt-6 flex items-center justify-center text-primary-500 opacity-0 group-hover:opacity-100 transition-opacity">
              <span class="text-sm font-medium">Visit Website</span>
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Digital Line Card / Flipbook -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="section-title mb-4">Digital Line Card</h2>
        <p class="section-subtitle mx-auto">
          Browse our complete product catalog in an interactive flipbook format
        </p>
      </div>

      <div class="glass-card p-4 max-w-5xl mx-auto overflow-hidden rounded-2xl">
        <iframe 
          width="100%" 
          height="600" 
          allowfullscreen
          class="rounded-lg"
          src="https://heyzine.com/flip-book/761a5168ef.html" 
          loading="lazy"
          title="BC Components Digital Line Card"
        ></iframe>
      </div>

      <!-- Download CTA -->
      <div class="text-center mt-8">
        <p class="text-gray-500 mb-4">Prefer a PDF version?</p>
        <a 
          href="/docs/BC Components Catalogue New.pdf" 
          download="BC_Components_Line_Card.pdf"
          class="btn-primary"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Download PDF Line Card
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-primary text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-display font-bold mb-4">
        Can't Find What You're Looking For?
      </h2>
      <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
        Our team is ready to help you source the right components for your needs.
      </p>
      <a href="/contact" class="btn bg-white text-primary-600 hover:bg-gray-100">
        Contact Our Team
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .filter-btn {
    @apply bg-gray-100 text-gray-600 hover:bg-primary-100 hover:text-primary-600;
  }
  
  .filter-btn.active {
    @apply bg-primary-500 text-white hover:bg-primary-600;
  }
</style>

<script>
  function initFilters() {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const cards = document.querySelectorAll('.principal-card');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const category = btn.getAttribute('data-category');

        cards.forEach(card => {
          const cardEl = card as HTMLElement;
          if (category === 'all' || card.getAttribute('data-category') === category) {
            cardEl.style.display = 'flex';
            cardEl.style.flexDirection = 'column';
          } else {
            cardEl.style.display = 'none';
          }
        });
      });
    });
  }

  // Run on DOMContentLoaded for initial page load
  document.addEventListener('DOMContentLoaded', initFilters);
  
  // Also run for Astro view transitions
  document.addEventListener('astro:page-load', initFilters);
</script>

